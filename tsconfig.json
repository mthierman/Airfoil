{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": ".",
        "outDir": "build",
        "allowJs": true
    },
    "include": ["modules", "scripts"]
}
