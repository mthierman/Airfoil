{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "paths": {
            "root/*": ["./*"],
            "modules/*": ["modules/*"],
            "scripts/*": ["scripts/*"],
            "src/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
